<Window x:Class="VideoMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Combiner" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- ListBox takes up most of the space -->
            <RowDefinition Height="Auto" /> <!-- Finalizing progress -->
            <RowDefinition Height="Auto" /> <!-- Combine Button -->
        </Grid.RowDefinitions>

        <!-- List of videos to be combined -->
        <ListBox Name="VideoListBox" AllowDrop="True" Drop="VideoListBox_Drop" Grid.Row="0" Margin="10" />

        <!-- Finalizing progress bar and text -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <TextBlock Name="FinalizingText" Text="Finalizing: 0%" HorizontalAlignment="Left" />
            <ProgressBar Name="FinalizingProgressBar" Minimum="0" Maximum="100" Height="20" Margin="0,0,0,5" />
        </StackPanel>

        <!-- Combine button -->
        <Button Name="CombineButton" Content="Combine" Grid.Row="2" Margin="10" Click="CombineButton_Click" />
    </Grid>
</Window>